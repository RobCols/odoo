<odoo>
    <!-- sale.order tree view -->
    <record id="flex_routes_sale_order_view_tree" model="ir.ui.view">
        <field name="name">sale.order.view.tree</field>
        <field name="model">sale.order</field>
        <field name="context">{'no_checkbox': 1} </field>
        <field name="arch" type="xml">
            <tree create="0" default_order="route_sequence" decoration-success="delivery_state=='delivered'" decoration-danger="delivery_state=='undelivered'">
                <field name="delivery_state" invisible="1" />
                <field name="state" invisible="1" />
                <field name="route_sequence" string="#" />
                <field name="partner_shipping_id" />
            </tree>
        </field>
    </record>

    <!-- flex_routes_sale_order action window -->
    <record id="route_route_action" model="ir.actions.act_window">
        <field name="name">flex_routes_sale_order.action</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">route.route</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p><p>
                <!-- More details about what a user can do with this object will be OK --> 
            </p>
        </field>
    </record>
</odoo>