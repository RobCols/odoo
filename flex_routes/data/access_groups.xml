<odoo>
    <data noupdate="1">
        <record model="ir.module.category" id="module_management">
            <field name="name">Routebeheer</field>
            <field name="description">Beheren van alle routes (manager) of enkel zien eigen routes (koerier)</field>
            <field name="sequence">3</field>
        </record>
        <record id="group_carrier" model="res.groups">
            <field name="name">Koerier</field>
            <field name="category_id" ref="flex_routes.module_management" />
        </record>
        <record id="group_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="implied_ids" eval="[(4, ref('flex_routes.group_carrier'))]" />
            <field name="category_id" ref="flex_routes.module_management" />
        </record>
    </data>
</odoo>