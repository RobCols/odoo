<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="product_template_only_form_view_empty" model="ir.ui.view">
            <field name="name">product.template.form.empty</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"></field>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div attrs="{'invisible': [('product_variant_count', '>', 1)]}">
                        <field name="is_empty"/>
                        <label for="is_empty"/>
                    </div>
                </xpath>
                <xpath expr="//page[@name='general_information']" position="after">
                    <page name="configure_empty" string="Configure Empty">
                        <field name="product_empty_ids">
                            <tree string="Empty Product" editable="bottom">
                                <field name="product_id" context="{'default_is_empty':'True'}" required="1"/>
                                <field name="quantity"/>
                            </tree>  
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="product_normal_form_view_empty" model="ir.ui.view">
            <field name="name">product.product.form.empty</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"></field>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_empty"/>
                        <label for="is_empty"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="product_variant_easy_edit_view_empty" model="ir.ui.view">
            <field name="name">product.product.view.form.easy.empty</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">      
                    <field name="is_empty"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
