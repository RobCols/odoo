<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_empty" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale.empty</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='group_stock_packaging']/../.." position="after">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="empty_section_name"/>
                        <field name="empty_section_name"/>
                        <div class="text-muted">
                            Name of Section for empty products
                        </div>
                    </div>
                </div>

                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="regular_section_name"/>
                        <field name="regular_section_name"/>
                        <div class="text-muted">
                            Name of Section for regular products
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
