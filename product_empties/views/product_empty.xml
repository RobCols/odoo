<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_empty_product_tree" model="ir.ui.view">
            <field name="name">product.empty.tree</field>
            <field name="model">product.empty</field>
            <field name="type">tree</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <tree string="Empty Product">
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="original_product_id" string="Main Product"/>
                </tree>
            </field>
        </record>

        <record id="view_empty_product_form" model="ir.ui.view">
            <field name="name">product.empty.form</field>
            <field name="model">product.empty</field>
            <field name="type">form</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <form string="Empty Product">
                    <group>
                        <group>
                            <field name="original_product_id" string="Main Product"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="product_id" required="1"/>
                        </group>
                        <group>
                            <field name="quantity" required="1"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_empty_product_search" model="ir.ui.view">
            <field name="name">product.empty.search</field>
            <field name="model">product.empty</field>
            <field name="type">search</field>
            <field name="priority" eval="8"/>
            <field name="arch" type="xml">
                <search string="Empty Product">
                    <field name="product_id"/>
                    <field name="original_product_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Main Product" name="original_product_id" domain="[]" context="{'group_by': 'original_product_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="act_open_empty_product_view">
            <field name="name">Empty Product</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.empty</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_empty_product_search"/>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_empty_product_view_form">
            <field name="act_window_id" ref="act_open_empty_product_view"/>
            <field name="sequence" eval="20"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_empty_product_form"/>
        </record>

        <record model="ir.actions.act_window.view" id="act_open_empty_product_view_tree">
            <field name="act_window_id" ref="act_open_empty_product_view"/>
            <field name="sequence" eval="10"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_empty_product_tree"/>
        </record>
    </data>
</odoo>
