<odoo>
    <record id="order_forecasting_ir_cron" forcecreate="True" model="ir.cron">
        <field name="name">Order forecasting</field>
        <field name="user_id" ref="base.user_root" />
        <field name="doall" eval="False" />
        <field name="active" eval="True" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="model_id" ref="model_sale_order_line" />
        <field name="state">code</field>
        <field name="code">model.predict_purchases()</field>
    </record>
    <record id="forecast_feedback_ir_cron" forcecreate="True" model="ir.cron">
            <field name="name">Order forecast feedback</field>
            <field name="user_id" ref="base.user_root" />
            <field name="doall" eval="False" />
            <field name="active" eval="True" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="model_id" ref="model_sale_order" />
            <field name="state">code</field>
            <field name="code">model.send_forecast_feedback()</field>
        </record>
</odoo>