<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- res.partner form view -->
    <record id="res_partner_belgium_address_input" model="ir.ui.view">
        <field name="name">res.partner.view.form.belgium.address</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form string="Belgium Partner Address">
                <field name="type" invisible="1" />
                <field name="parent_id" invisible="1" />
                <field name="street" class="oe_read_only o_address_street" />
                <br class="oe_read_only" />
                <field name="street_name" placeholder="Street Name..." attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" class="oe_edit_only" modifiers="{'readonly':[['type','=','contact'],['parent_id','!=',false]]}" />
                <div class="oe_edit_only o_row" modifiers="{}">
                    <label for="street_number" modifiers="{}" />
                    <span modifiers="{}" />
                    <field name="street_number" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" modifiers="{'readonly':[['type','=','contact'],['parent_id','!=',false]]}" />
                    <label for="street_number2" modifiers="{}" />
                    <field name="street_number2" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" modifiers="{'readonly':[['type','=','contact'],['parent_id','!=',false]]}" />
                </div>
                <field name="street2" placeholder="Street 2..." class="o_address_street" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" modifiers="{'readonly':[['type','=','contact'],['parent_id','!=',false]]}" />
                <field name="country_enforce_cities" invisible="1" modifiers="{'invisible':true,'readonly':true}" />
                <field name="city_id" placeholder="City" string="City" />
                <field name="city" invisible="1" />
                <field name="state_id" invisible="1" />
                <field name="zip" invisible="1" />
                <br class="oe_read_only" />
                <field name="country_id" placeholder="Country" class="o_address_country" options="{'no_open': True, 'no_create': True}" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}" on_change="1" can_create="true" can_write="true" modifiers="{'readonly':[['type','=','contact'],['parent_id','!=',false]]}" />
            </form>
        </field>
    </record>
</odoo>