<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Form view for Push Device-->
        <record id="view_push_device_tree" model="ir.ui.view">
            <field name="name">push.device.tree</field>
            <field name="model">push.device</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="registration_token"/>
                    <field name="res_model"/>
                    <field name="res_id"/>
                </tree>
            </field>
        </record>

        <!-- Tree view for Push Device-->
        <record id="view_push_device_form" model="ir.ui.view">
            <field name="name">push.device.form</field>
            <field name="model">push.device</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="registration_token"/>
                            <field name="res_model"/>
                            <field name="res_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action Push Device-->
        <record id="push_device_action" model="ir.actions.act_window">
            <field name="name">Push Device</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">push.device</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
        </record>

        <!-- Top menuitem -->
        <menuitem id="device_root"
            name="Device"
            action="push_device_action"
            sequence="1"/>

    </data>
</odoo>
