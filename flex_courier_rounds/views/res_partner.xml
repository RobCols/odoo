<odoo>
    <data>
        <record id="view_crm_partner_dropoff_maps" model="ir.ui.view">
            <field name="name">res.partner.dropoff.map.inherit</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base_geolocalize.view_crm_partner_geo_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='routing_group']" position="after">
                    <group col="1" string="Drop off point">
                        <widget name="leaflet_marker" map_type="sat" lat="dropoff_latitude" lng="dropoff_longitude" zoom_field="dropoff_zoomlevel" description="Routing Geo">
                            <field name="dropoff_latitude" />
                            <field name="dropoff_longitude" />
                            <field name="dropoff_zoomlevel" />
                        </widget>
                        <button name="button_set_dropoff_to_routing" type="object" string="default dropoff" class="btn btn-primary" />
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>