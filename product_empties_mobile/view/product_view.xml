<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="product_template_only_form_view_empty_mobile" model="ir.ui.view">
            <field name="name">product.template.form.empty.mobile</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product_empties.product_template_only_form_view_empty"></field>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_manual_empty" attrs="{'readonly': [('product_variant_count', '>', 1)]}"/>
                        <label for="is_manual_empty"/>
                        <div class="oe_inline" style="display: inline" attrs="{'invisible': [('product_variant_count', '=', 1)]}">(set from variants)</div>
                    </div>
                </xpath>
                <!-- <xpath expr="//page[@name='configure_empty']" position="attributes">
                    <attribute name="attrs">{'invisible': [('is_manual_empty', '=', True)]}</attribute>
                </xpath> -->
            </field>
        </record>

        <record id="product_normal_form_view_empty" model="ir.ui.view">
            <field name="name">product.product.form.empty</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"></field>
            <field name="arch" type="xml">
                <xpath expr="//div[@name='options']" position="inside">
                    <div>
                        <field name="is_manual_empty"/>
                        <label for="is_manual_empty"/>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="product_variant_easy_edit_view_empty" model="ir.ui.view">
            <field name="name">product.product.view.form.easy.empty</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"></field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="after">      
                    <field name="is_manual_empty"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
